<odoo>

    <!-- TREE VIEW -->
    <record id="finding_milestone_view_tree" model="ir.ui.view">
        <field name="name">qms.finding.milestone.tree</field>
        <field name="model">qms.finding.milestone</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="sequence" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="finding_milestone_view_search" model="ir.ui.view">
        <field name="name">qms.finding.milestone.view.search</field>
        <field name="model">qms.finding.milestone</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="finding_milestone_view_form" model="ir.ui.view">
        <field name="name">qms.finding.milestone.form</field>
        <field name="type">form</field>
        <field name="model">qms.finding.milestone</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="sequence" />
                        <field name="reference_code" />
                        <field name="description" colspan="4" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
